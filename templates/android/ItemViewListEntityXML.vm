<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/activity_margin">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/activity_margin"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/entity_list_item_view_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Heading"
                android:textColor="@color/novopay_color_primary"
                android:textSize="@dimen/novopay_medium_16sp"
                android:layout_marginTop="@dimen/tx_half_activity_margin"
                android:gravity="top"/>

            <TextView
                android:id="@+id/entity_list_item_view_sub_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Sub Heading | Sub Heading"
                android:textSize="@dimen/novopay_small_12sp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/novopay_hdfc_sli_color_divider"
        android:layout_below="@+id/main_layout"/>
</RelativeLayout>